    "#写函数，返回一个list中所有数字的和\n",
    "import random\n",
    "def sum_list(list):\n",
    "    total = 0\n",
    "    for x in list:\n",
    "        total  += x\n",
    "    return total\n",
    "\n",
    "random.seed(1)\n",
    "num_list = int(random.randint(0,8))\n",
    "print(\"请在list中输入%d个数进行求和运算\" %num_list)\n",
    "list=[]\n",
    "i=1\n",
    "while i <= num_list:\n",
    "    num = float(input('请输入第%d个数，回车结束。'%i))\n",
    "    list.append(num)\n",
    "    i+=1\n",
    "\n",
    "print(\"Sum of %d numbers in list is %f\" %(num_list,sum_list(list)))"
   ]
