# In[41]:


a = input('请输入一个单词的单数形式')
if a.endswith('s'or'sh'or'ch'):
    a+='es'
    p=a
    print('这就是复数啦',p)
elif a.endswith('e'):
    a+='s'
    p=a
    print('是这个啦',p)
elif a.endswith('y'):
    p=a.replace('y','ies')
    
    print('这个要记住啊',p)
elif a.endswith('s'):
    print('还是她啦',a)
else:
    a+='s'
    print('是这个吧，不确定就查字典去吧',a)


