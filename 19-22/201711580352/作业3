# In[3]:


print('作业一')
name= input('告诉我你的名字吧')
bir = float(input('你是那天活过来的？3.21吗？'))

if 3.21<=bir<=4019:
    print(name,'看来你命中注定是白羊座啊！')
elif 4.20<=bir<=5.20:
    print(name,'居然是只金牛座的')
elif 5.21<=bir<=6.21:
    print(name,'居然是只双子座的')
elif 6.22<=bir<=7.22:
    print(name,'居然是只巨蟹的')
elif 7.23<=bir<=8.22:
    print(name,'居然是只狮子座的')
elif 8.23<=bir<=9.22:
    print(name,'居然是只处女座的')
elif 9.23<=bir<=10.23:
    print(name,'居然是只天秤座的')
elif 10.24<=bir<=11.22:
    print(name,'居然是只天蝎座的')
elif 11.23<=bir<=12.21:
    print(name,'居然是只射手座的')
elif 12.22<=bir<=1.19:
    print(name,'居然是只摩羯座的')
elif 1.20<=bir<=2.18:
    print(name,'居然是只水瓶座的')
elif 2.19<=bir<=3.20:
    print(name,'居然是只双鱼座的')


