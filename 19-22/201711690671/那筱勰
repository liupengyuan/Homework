    "m=int(input('请输入一个整数m='))\n",
    "n=int(input('请输入一个整数n，且n不等于0='))\n",
    "\n",
    "res=int(input('若要求和请输入“1”，求乘积请输入“2”，求余数请输入“3”'))\n",
    "if res==1:\n",
    "    print('和为',m+n)\n",
    "    \n",
    "elif res==2:\n",
    "    print('乘积为',m*n)\n",
    "    \n",
    "elif res==3:\n",
    "    print('m除以n的余数为',m%3)"
